<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th colspan="5"></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id  %></td>
        <td nowrap><%= link_to item.name ,admin_item_path  %></td>
        <td><%= item.tax_free_price %></td>
        <td><%= item.genre %></td>
        <td><%= item.sales_status %></td>
        <td >
      </tr>
    <% end %>
  </tbody>
</table>