<table class='table table-hover table-striped table-inverse'style="background-color:gainsboro;">
  
  <thead>
    <tr>
      <th nowrap>購入日時</th>
      <th nowrap>購入者</th>
      <th nowrap>注文個数</th>
      <th nowrap>注文ステータス</th>
    </tr>
  </thead>
  
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td nowrap><u><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S") ,admin_order_path(order.id),class: "text-dark" %></u></td>
        <td nowrap><%= order.customer.full_name %></td>
        <td nowrap><%#= order.order_items.amount %></td>
        <td nowrap>
        <% if order.order_status == "入金待ち" %>
            <span class="text-dark"><strong>入金待ち</strong></span>
        <% elsif order.order_status == "入金確認" %>
            <span class="text-dark"><strong>入金確認</strong></span>
        <% elsif order.order_status == "制作中" %>
            <span class="text-dark"><strong>制作中</strong></span>
        <% elsif order.order_status == "発送準備中" %>
            <span class="text-dark"><strong>発送準備中</strong></span>
        <% else  order.order_status == "発送済み" %>
            <span class="text-dark"><strong>発送済み</strong></span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  
</table>