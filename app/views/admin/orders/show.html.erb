<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class= "pt-5 ml-4 col-md-7 col-sm-6" style="font-size: 20px;">
      <span style="background-color:gainsboro"><strong>　注文履歴詳細　</strong></span>
      
      <div class='container px-5 px-sm-0'>
        <div class='row'>
          <div class="mt-3"><strong>購入者</strong></div>
          <div class="mt-3 ml-3 col-3"><%#= @customer.full_name %></div>
        </div>
        
        <div class='row'>
          <div class="mt-3"><strong>注文日</strong></div>
          <div class="mt-3 ml-3 col-3"><%#= @order.created_at %></div>
        </div>
          
        <div class='row'>
          <div class="mt-3"><strong>配送先</strong></div>
          <div class="mt-3 ml-3 col-3"><%#= @order.post_code %><%#= order.address %><%#= order.to_name %></div>
        </div>
        
        <div class='row'>
          <div class="mt-3"><strong>支払い方法</strong></div>
          <div class="mt-3 ml-3 col-3"><%#= @order.payment_method %></div>
        </div>
        
        <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
        <div class='row'>
          <div class="mt-3"><strong>注文ステータス</strong></div>
            <div class="mt-3 ml-3 col-3"><%= f.select :order_status, Order.order_statuses.keys, class: "order_status" %></div>
            <div class="mt-3 col-3"><%= f.submit "更新" , class: "btn btn-success" %></div>
        </div>
        <% end %>
        
      <div class='container mt-4 px-5 px-sm-0 '>
        <div class='row'>
          <%= render 'index', order: @oeder %>
        </div>
      </div>
      
    </div>
  </div>
</div>