<div class='container px-5 px-sm-0'>
  <div style ="color:green;"><%= flash[:notice] %></div>
  <div class='row'>
    <div class= "pt-2 ml-4 col-md-7 col-sm-6" style="font-size: 20px;">
      <span style="background-color:gainsboro"><strong>　注文履歴詳細　</strong></span>

      <div class='container px-5 px-sm-0'>
        <div class='row'>
          <div class="mt-3"><strong>購入者</strong></div>
          <div class="mt-3 ml-5 col-3"><%= @order.customer.full_name %></div>
        </div>

        <div class='row'>
          <div class="mt-3"><strong>注文日</strong></div>
          <div class="mt-3 ml-5 col-3"><%= @order.created_at.strftime("%Y-%m-%d") %></div>
        </div>

        <div class='row'>
          <div class="mt-3"><strong>配送先</strong></div>
          <div class="mt-3 ml-5 col-5"><%= @order.ship_address %></div>
        </div>

        <div class='row'>
          <div class="mt-3"><strong>支払い方法</strong></div>
          <div class="mt-3 ml-5 col-5"><%= @order.payment_method_i18n %></div>
        </div>

        <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch, local: true do |f| %>
        <div class='row'>
          <div class="mt-3"><strong>注文ステータス</strong></div>
            <div class="mt-3 ml-5 col-3"><%= f.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]}, class: "order_status" %></div>
            <div class="mt-3 col-3"><%= f.submit "更新" , class: "btn btn-success" %></div>
        </div>
        <% end %>

      <div class='container mt-4 px-5 px-sm-0 '>
        <div class='row'>
          <%= render 'index', order_item: @order_item %>
        </div>
      </div>

    </div>
  </div>
 </div>
</div>

<div class="col-3 clearfix float-right"style="font-size: 20px;">
  <table>
    <th></th>
    <tr>
      <td style="font-weight: bolder;">商品合計</td>
      <td>:<%= @order.total_payment.round.to_s(:delimited) %>円</td>
    </tr>
      <tr>
      <td style="font-weight: bolder;">送料</td>
      <td>:<%= @order.postage %>円</td>
    </tr>
    <tr>
      <td style="font-weight: bolder;">請求合計金額</td>
      <td style="font-weight: bolder;">:<%= @order.total_payment.to_s(:delimited) %>円</td>
    </tr>

    </table>
</div>