<div class="container mt-5">
   <div class="row">
     <div class="col-md-8 offset-md-1">
       <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
        <table class="table mt-5">
        <tbody>
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @customer.last_name %>　<%= @customer.first_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= @customer.post_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.phone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th>
              <% if @customer.is_deleted == false %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-danger">退会</span>
              <% end %>
            </th>
          </tr>
          <tr>
            <th></th>
            <th><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success btn-lg mr-5" %><%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary btn-lg" %></th>
          </tr>
        </tbody>
      </table>
     </div>
   </div>
 </div>

