<div class="container mt-5">
   <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
   <div class="row">
     <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
     <div class="col-md-12 offset-md-3">
      <table class="table mt-5">
        <tbody>
          <tr>
            <th><%= f.label :id, "会員ID" %></th>
            <th><%= @customer.id %></th>
            <th></th>
          </tr>
          <tr>
            <th><%= f.label :last_name, "氏名" %></th>
            <th><%= f.text_field :last_name %></th>
            <th><%= f.text_field :first_name %></th>
          </tr>
          <tr>
            <th><%= f.label :last_name_kana, "フリガナ" %></th>
            <th><%= f.text_field :last_name_kana %></th>
            <th><%= f.text_field :first_name_kana %></th>
          </tr>
          <tr>
            <th><%= f.label :post_code, "郵便番号" %></th>
            <th><%= f.number_field :post_code %></th>
          </tr>
          <tr>
            <th><%= f.label :address, "住所" %></th>
            <th><%= f.text_field :address %></th>
          </tr>
          <tr>
            <th><%= f.label :phone_number, "電話番号" %></th>
            <th><%= f.number_field :phone_number %></th>
          </tr>
          <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <th><%= f.text_field :email %></th>
          </tr>
          <tr>
            <th><%= f.label :is_deleted, "会員ステータス" %></th>
            <th><%= f.radio_button :is_deleted, 0, checked: true %>有効 <%= f.radio_button :is_deleted, 1 %>退会</th>
          </tr>
          <tr>
            <th></th>
            <th><%=  f.submit "変更を保存", class: "btn btn-success btn-lg" %></th>
            <th></th>
          </tr>
        </tbody>
      </table>
     </div>
     <% end %>
   </div>
 </div>
