<h4>商品詳細</h4>

<div class="container">
   <div class="row">
     <div class="col-md-3">
       <%= image_tag @item.get_image(100, 100) %>
     </div>

     <div class="col-md-8 offset-md-1">
        <table class="table">
        <tbody>
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= @genre.name %></th>
          </tr>
          <tr>
            <th>税込価格<br>(税抜価格)</th>
            <th><%= (@item.tax_free_price * 1.1).round(0) %>(<%= @item.tax_free_price %>)円</th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @item.sales_status == false %>
                <span class="text-success">販売中</span>
              <% else %>
                <span class="text-success">販売停止中</span>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-lg" %>
      </div>
     </div>
   </div>
 </div>
