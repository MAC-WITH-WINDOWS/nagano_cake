<h4>商品詳細</h4>

<div class="container">
   <div class="row">
     <div class="col-md-3">
       <%= image_tag @item.get_image(100, 100) %>
     </div>

     <div class="col-md-8 offset-md-1">
        <table class="table">
        <tbody>
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= @genre.name %></th>
          </tr>
          <tr>
            <th>税込価格<br>(税抜価格)</th>
            <th><%= (@item.tax_free_price * 1.1).round(0) %>(<%= @item.tax_free_price %>)円</th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @item.sales_status == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
     </div>
   </div>
 </div>
