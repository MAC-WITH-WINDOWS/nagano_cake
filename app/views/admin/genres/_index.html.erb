<table class='table table-hover table-inverse'style="background-color:gainsboro;">
  
  <thead>
    <tr>
      <th nowrap>ジャンル</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td nowrap><%= genre.name %></td>
