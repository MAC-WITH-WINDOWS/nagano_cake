<div class='container px-5 px-sm-0'>
  
  <div class='row'>
    <div class= "pt-5 ml-4 col-md-4 col-sm-6" style="font-size: 20px;">
      <span style="background-color:gainsboro"><strong>　ジャンル一覧・追加　</strong></span>
    </div>
  </div>
    
  <%= form_with model:@genre,url: admin_genres_path, method: :post do |f| %>
  <div class='container px-5 px-sm-0 '>
    <div class='row'>
      <div class="mt-5"><%= f.label :name, "ジャンル名" %></div>
      <div class="mt-5 ml-3 col-3 "><%= f.text_field :name, autofocus: true, autocomplete: "genres", placeholder: "ジャンル名", class:"form-control" %></div>
      <div class="mt-5 ml-3 col-3"><%= f.submit "新規登録", class:"btn btn-success col-5" %></div>
    </div>
  </div>
  <% end %>
  
  <div class='container px-1 px-sm-0 mt-5'>
    <div class='row'>
      <div class="col-3">
      <%= render 'index', genres: @genres %>
      <%= paginate @genres %>
    </div>
   </div>
  </div>
