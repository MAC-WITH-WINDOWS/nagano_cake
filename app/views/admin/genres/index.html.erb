<div class='container px-5 px-sm-0'>
  <div class='row'>
    
    <div class= "pt-5 ml-4 col-md-2 col-sm-6" style="font-size: 20px;">
      <span style="background-color:gainsboro"><strong>　ジャンル一覧・追加　</strong></span>
    </div>
    

        <div class="row mb-3">
          
          <div class="col-3 ml-auto">
        <%= form_with model:@genre,url: admin_genres_path, method: :post do |f| %>
            <%= f.label :name, "ジャンル名" %>
          </div>
          <div class="col-8">
            <%= f.text_field :name, autofocus: true, autocomplete: "genres", placeholder: "ジャンル名", class:"form-control" %>
          </div>
          <div class="text-center mt-5">
        <%= f.submit "新規登録", class:"btn btn-success col-3" %>
          </div>
        <% end %>
        </div>
  
  <div class='row ml-5'>
    <div class='pt-4 ml-3 col-md-2 col-sm-6'>
      <%= render 'index', genres: @genres %>
    </div>
  </div>
</div>
