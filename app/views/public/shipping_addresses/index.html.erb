<div class="container">
  <h3 class="mt-5 mb-4"><span class="bg-light px-4">配送先登録/一覧</span></h3>
  <%= form_with model: [:public, @address] do |f| %>
    <div class="row">
      <%= f.label :post_code, "郵便番号(ハイフンなし)",class:"col-3" %>
      <%= f.text_field :post_code ,autocomplete: "post_code", placeholder: "0000000", class:"col-3" %>
    </div>
    <div class="row my-3">
      <%= f.label :address, "住所",class:"col-3" %>
      <%= f.text_field :address ,autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class:"col-6" %>
    </div>
    <div class="row">
      <%= f.label :name, "宛名",class:"col-3" %>
      <%= f.text_field :name ,autocomplete: "name", placeholder: "令和道子",class:"col-3" %>
      <%= f.submit "新規登録", class:"btn btn-success offset-1 px-4" %>
    </div>
  <% end %>
  
  <div class="mt-5">
    <% if current_customer.shipping_addresses.any? %>
      <table class="table table-bordered col-10">
        <thead>
          <tr>
            <th class="col-1">郵便番号</th>
            <th class="col-3">住所</th>
            <th class="col-1">宛名</th>
            <th class="col-2"></th>
          </tr>
        </thead>
        <tbody>
          <% current_customer.shipping_addresses.each do |address| %>
          <tr>
            <td>〒<%= address.post_code.to_s.insert(3, "-") %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td class="d-flex justify-content-around">
              <%= link_to "編集する", edit_public_shipping_address_path(address.id), class:"btn btn-success" %>
              <%= link_to "削除する", public_shipping_address_path(address.id),method: :delete, data: { confirm: '本当に削除しますか？' }, class:"btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>登録された配送先はありません。</p>
    <% end %>
  </div>
</div>