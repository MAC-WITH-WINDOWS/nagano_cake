<div class="container">
  <h3 class="mt-5 mb-4"><span class="bg-light px-4">配送先登録/一覧</span></h3>
  <%= render "form", address: @address %>
  <div>
    <% if current_customer.shipping_addresses.any? %>
      <table class="table table-bordered col-7">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% current_customer.shipping_addresses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_public_shipping_address_path(address.id), class:"btn btn-success" %>
              <%= link_to "削除する", public_shipping_address_path(address.id),method: :delete, class:"btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>登録された配送先はありません。</p>
    <% end %>
  </div>
</div>