<div class="container">
  <div class="row">
    <div class="col-11">
      <h3 class="ml-4 mb-5 mt-3 bg-light"><span>新規会員登録</span></h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
      
        <div class="row">
          <div class="col-3">
            <%= f.label  "名前" %>
          </div>
          <div class="col-4 text-right">
            <%= f.label  "(姓)" %>
            <%= f.text_field :last_name,  autocomplete: "last_name",placeholder: "令和" %>
          </div>
          <div class="col-4 text-right">
            <%= f.label  "(名)" %>
            <%= f.text_field :first_name,  autocomplete: "first_name",placeholder: "道子" %>
          </div>
        </div>
        <div class="row">
          <div class="col-3">
            <%= f.label  "フリガナ" %>
          </div>
          <div class="col-4 text-right">
            <%= f.label  "(セイ)" %>
            <%= f.text_field :last_name_kana,  autocomplete: "last_name_kana",placeholder: "レイワ" %>
          </div>
          <div class="col-4 text-right">
            <%= f.label  "(メイ)" %>
            <%= f.text_field :first_name_kana,  autocomplete: "last_name_kana",placeholder: "ミチコ" %>
          </div>
        </div>
        
        
        <div class="row">
          <div class="col-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-4 text-right">
            <%= f.email_field :email, autocomplete: "email",placeholder: "sample@example.com" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
          </div>
          <div class="col-4 text-right">
            <%= f.text_field :post_code, autocomplete: "post_code",placeholder: "0000000" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-4 text-right">
            <%= f.text_field :address, autocomplete: "address",placeholder: "東京都渋谷区代々木神園町0-0" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
          </div>
          <div class="col-4 text-right">
            <%= f.text_field :phone_number, autocomplete: "phone_number",placeholder: "00000000000" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </div>
          <div class="col-4 text-right">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :password_confirmation, "パスワード(確認用)" %>
          </div>
          <div class="col-4 text-right">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
        <div class="col-3 text-center">
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
      <% end %>
      
      <h3>既に登録済みの方</h3>
      <div>
        <%= link_to "こちら", new_customer_session_path %>  からログインしてください。
      </div>
      <%#= render "public/shared/links" %>
    </div>
  </div>
</div>


