      <%= form_with model: [:public, customer] do |f| %>

        <div class="row">
          <div class="col-3">
            <%= f.label  "名前" %>
          </div>
          <div class="col-4 text-right">
            <%= f.label  "(姓)" %>
            <%= f.text_field :last_name,  autocomplete: "last_name",placeholder: "令和" %>
          </div>
          <div class="col-4 text-right">
            <%= f.label  "(名)" %>
            <%= f.text_field :first_name,  autocomplete: "first_name",placeholder: "道子" %>
          </div>
        </div>
        <div class="row">
          <div class="col-3">
            <%= f.label  "フリガナ" %>
          </div>
          <div class="col-4 text-right">
            <%= f.label  "(セイ)" %>
            <%= f.text_field :last_name_kana,  autocomplete: "last_name_kana",placeholder: "レイワ" %>
          </div>
          <div class="col-4 text-right">
            <%= f.label  "(メイ)" %>
            <%= f.text_field :first_name_kana,  autocomplete: "last_name_kana",placeholder: "ミチコ" %>
          </div>
        </div>
        
        
        <div class="row">
          <div class="col-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-4 text-right">
            <%= f.email_field :email, autocomplete: "email",placeholder: "sample@example.com" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
          </div>
          <div class="col-4 text-right">
            <%= f.text_field :post_code, autocomplete: "post_code",placeholder: "0000000" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-4 text-right">
            <%= f.text_field :address, autocomplete: "address",placeholder: "東京都渋谷区代々木神園町0-0" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
          </div>
          <div class="col-4 text-right">
            <%= f.text_field :phone_number, autocomplete: "phone_number",placeholder: "00000000000" %>
          </div>
        </div>
        <div class="row justify-content-around">
          <div class="text-center mt-3 col-3">
            <%= f.submit "編集内容を保存", class:"btn btn-success px-5" %>
          </div>
          <div class="col-3 mt-3">
            <%= link_to "退会する", public_customers_check_path, class:"btn btn-danger" %>
          </div>
        </div>

      <% end %>