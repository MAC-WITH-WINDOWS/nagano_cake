<%= stylesheet_link_tag "application", :media => "all" %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"><!--ジャンル検索欄(部分テンプレート挿入部分)!--></div>
    <div class="col-md-10"><!--以下商品一覧部分!-->
      <h1 style="display:inline;"><strong>商品一覧</h1>(全<%=@items.count%>件)</strong>
                           



      <div class="grid">
        <% @items.each do |items| %>
        <div>
          <%= image_tag items.get_image(100,100) %><br>
          <%= link_to public_item_path(items) do %><%= items.name %><% end %><br>
          <%= items.tax_free_price %>
        </div>
        <% end %>
      </div>



    </div>
  </div>
</div>
<%= paginate @items %>

